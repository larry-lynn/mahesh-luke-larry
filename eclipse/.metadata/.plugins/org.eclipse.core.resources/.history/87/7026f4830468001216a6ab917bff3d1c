<project default="run">

	<property name="src" location="./"/>
	<property name="build" location="../../build"/>
	<property name="dist" location="../../dist"/>
		
    <target name="clean">
        <delete dir="${build}"/>
        <delete dir="${dist}"/>
    </target>

    <target name="compile">
        <mkdir dir="${build}/classes"/>
        <javac srcdir="${src}" destdir="${build}/classes"/>
    </target>

    <target name="jar" depends="compile">
        <mkdir dir="${dist}/jar"/>
        <jar destfile="${dist}/jar/mp" basedir="${build}/classes/scanner">
            <manifest>
                <attribute name="Main-Class" value="mp"/>
            </manifest>
        </jar>
    </target>

    <target name="make-executable" depends="jar">
        <chmod file="${build}/jar/mp" perm="755" />
    </target>

    <target name="run" depends="make-executable">
        <java jar="${build}/jar/mp" fork="true"/>
    </target>

</project>